/* components/footer/footer.wxss */
.footer{
    position: fixed;
    bottom: 0;
    width: 100%;
    z-index: 99999;
    height: 98rpx;
    background: #fff;
    box-shadow: 0px -4px 10px 0px rgba(51,51,51,0.1);
    padding: 10rpx 0 16rpx 0;
    display: flex;
    box-sizing: border-box;
}
.item{
    flex: 1;
    display: flex;
    justify-content: center;
    flex-direction: column;
    text-align: center;
}
.text{
    display: block;
    height:20rpx; 
    font-size:20rpx;
    font-family:PingFangSC-Regular;
    color:rgba(153,153,153,1);
    line-height:20rpx;
    margin-top: 4rpx;
}
.footer_icon{
    margin: 0 auto;
    display: block;
    width: 48rpx;
    height: 48rpx;
}
.poinits{
    position: relative;
}
.points_position{
    position: absolute;
    top: -50rpx;
    left: 50%;
    transform: translateX(-50%);
}
.points_icon{
    width: 100rpx;
    height: 100rpx;
}