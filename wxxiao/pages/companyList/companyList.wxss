/* pages/companyList/companyList.wxss */
.company{
 width: 100%;
 height: 100%;
 background: #f5f5f5;
 position: fixed;
 top: 0;
}
.list{
  height:100%;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-orient:vertical;
  -webkit-flex-direction:column;
  flex-direction:column;
  overflow:hidden;
  padding: 0 30rpx;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.item{
  width: 100%;
  height: 230rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow:0px 0px 6rpx 0px rgba(0,0,0,0.06);
  margin-top: 20rpx;
}
.item:last-child {
  margin-bottom: 20rpx;
}
.compony-mess{
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 140rpx;
  border-bottom: 2rpx solid #EFEFEF;
}
.company_icon{
  flex: 0 0 62rpx;
  width: 62rpx;
  height: 62rpx;
}
.right_icon{
  width: 20rpx;
  height: 30rpx;
}
.company-name{
  flex: 1;
  color:rgba(51,51,51,1);
  font-size: 30rpx;
  margin-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.right_icon{
  flex: 0 0 20rpx;
}
.btn-box{
  width: 100%;
  font-size: 0;
  display: flex;
  padding: 24rpx 0;
}
.edit,.delete{
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  display: inline-block;
  line-height: 40rpx;
}
.edit{
  border-right: 2rpx solid #EFEFEF;
}
.add_btn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  z-index: 10000;
  background:linear-gradient(135deg,rgba(249,100,50,1),rgba(253,146,70,1));
  box-shadow:0px 4rpx 10rpx 0px rgba(249,100,50,0.3);
  line-height: 100rpx;
  text-align: center;
  font-size:30rpx;
  color: #fff;
}