/* pages/my/my.wxss */
.content{
    width: 100%;
    height: 100%;
    background: #fff;
    box-sizing: border-box;
}
.header{
    width: 100%;
    position: relative;
}
.header_bg{
    width: 100%;
}
.header_mess{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    text-align: center;
    z-index: 100;
}
.avatar_box{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background:rgba(255,255,255,0.3);
    position: relative;
    margin:0 auto;
    margin-top: 130rpx;

}
.avatar{
    position: absolute;
    width: 108rpx;
    height: 108rpx;
    border-radius: 54rpx;
    left: 6rpx;
    top: 6rpx;
}
.user_name{
    font-size:30rpx;
    color:rgba(255,255,255,1);
    margin-top: 20rpx;
}
.user_id{
    font-size:24rpx;
    color:rgba(255,255,255,1);
    margin-top: 10rpx;
}
.enter_box{
    width: 100%;
    box-sizing: border-box;
    padding: 40rpx 16rpx;
    margin-bottom: 98rpx;
}
.enter_list{
    font-size: 0;
    text-align: center;
}
.enter_item{
    width: 33.33%;
    display: inline-block;
}
.enter_img{
    width: 88rpx;
    height: 60rpx;
}
.enter_name{
    display: block;
    font-size:24rpx;
    color:rgba(51,51,51,1);
    margin-top: 20rpx;
}
.enter_top{
    margin-top: 70rpx;
}