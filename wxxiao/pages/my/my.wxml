<!--pages/my/my.wxml-->
<view class="content">
   <view class="header">
        <image class="header_bg" src="{{img_url}}/bg.png"></image>
        <view class="header_mess">
            <view class="avatar_box">
                <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
            </view>
            <view class="user_name">{{userInfo.nickName}}</view>
            <view class="user_id">兆方VIP会员</view>
        </view>
   </view>
   <view class="enter_box">
       <view class="enter_list" >
           <view class="enter_item" data-link="../../pages/chooseGrap/chooseGrap" bindtap="goNext">
                <image class="enter_img" src="{{img_url}}/zf_pay.png"></image>
                <text class="enter_name">兆方车上付</text>
           </view>
           <view class="enter_item" data-link="../../pages/myCard/myCard" bindtap="goNext">
                <image class="enter_img" src="{{img_url}}/zf_card.png"></image>
                <text class="enter_name">我的兆方卡</text>
           </view>
           <view class="enter_item" data-link="../../pages/welfare/welfare" bindtap="goNext">
                <image class="enter_img" src="{{img_url}}/zf_card1.png"></image>
                <text class="enter_name">兆方公益</text>
           </view>
       </view>
       <view class="enter_list enter_top">
            <view class="enter_item"  bindtap="goRecharge">
                    <image class="enter_img" src="{{img_url}}/add_copy.png"></image>
                    <text class="enter_name">兆方卡充值</text>
            </view>
            
            <view class="enter_item" data-link="../../pages/modifyPass/modifyPass" bindtap="goNext">
                    <image class="enter_img" src="{{img_url}}/password.png"></image>
                    <text class="enter_name">找回密码</text>
            </view>
            <view class="enter_item" data-link="../../pages/completeMess/completeMess" bindtap="goNext">
                    <image class="enter_img" src="{{img_url}}/my_copy.png"></image>
                    <text class="enter_name">完善资料</text>
            </view>
        </view>
        <view class="enter_list enter_top">
            <view class="enter_item" data-link="../../pages/invoiceSearch/invoiceSearch" bindtap="goNext">
                    <image class="enter_img" src="{{img_url}}/icon_invoice.png"></image>
                    <text class="enter_name">发票管理</text>
            </view>
            <view class="enter_item" data-link="../../pages/search/search?tabIndex=2" bindtap="goNext">
                    <image class="enter_img" src="{{img_url}}/icon_consume.png"></image>
                    <text class="enter_name">消费记录</text>
            </view>
            <view class="enter_item" data-link="../../pages/search/search?tabIndex=1" bindtap="goNext">
                    <image class="enter_img" src="{{img_url}}/icon_consume1.png"></image>
                    <text class="enter_name">充值记录</text>
            </view>
        </view>
        <view class="enter_list enter_top">
                <view class="enter_item" data-link="../../pages/points/points" bindtap="goNext">
                        <image class="enter_img" src="{{img_url}}/icon_point.png"></image>
                        <text class="enter_name">积分查询</text>
                </view>
                <view class="enter_item"></view>
                <view class="enter_item"></view>
        </view>
   </view> 
</view>

<footer showMy="{{true}}"></footer>
