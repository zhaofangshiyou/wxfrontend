/* pages/invoiceDetail/invoiceDetail.wxss */
.invoiceDetail{
  position: fixed;
  top: 0;
  height: 100%;
  width: 100%;
  overflow: auto;
  background: #f5f5f5;
}
.title{
  padding-left: 30rpx;
  height: 74rpx;
  line-height: 74rpx;
  font-size:24rpx;
  color:rgba(153,153,153,1);
}
.tab{
  width: 100%;
  height: 180rpx;
  background: #fff;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between; 
}
.tab_item {
  width: 310rpx;
  height: 100rpx;
  border: 2rpx solid #BDBDBD;
  border-radius: 8rpx;
  text-align: center;
  line-height: 100rpx;
  font-size:28rpx;
  color:rgba(102,102,102,1);
}

.tab_item.active{
  background:rgba(254,221,213,1);
  border:2rpx solid rgba(249,100,50,1);
  color: #F96432;
}
.invoice_mess{
  padding-left: 30rpx;
  background: #fff;
}

.item:last-child{
  border-bottom: 0;
  font-size:30rpx;
  color:rgba(51,51,51,1);
}
.item_left{
  display: inline-block;
  height: 30rpx;
  line-height: 45rpx;
  width: 120rpx;
  text-align:justify;
  text-justify:inter-ideograph;
  vertical-align: middle;
  flex: 0 0 120rpx;
}
.item_left:after {
  content: " ";
  display: inline-block;
  width: 100%;
}
.item_right{
  display: inline-block;
  margin-left: 40rpx;
  line-height: 45rpx;
  vertical-align: middle;
  flex: 1;
}
.toggle_icon{
  width: 24rpx;
  height: 12rpx;
  display: inline-block;
  position: absolute;
  right: 24rpx;
  padding-top: 8rpx;
}

.more_item{
  padding: 36rpx 0;
  font-size:30rpx;
  line-height: 0;
  border: 0;
  display: flex;
  align-items:top;
  border-bottom:2rpx solid #efefef;

}
.more_item_left{
  height: 30rpx;
  line-height: 30rpx;
}
.sureBtn{
  margin: 60rpx 0 55rpx;
}

.email_box{
  margin-top: 20rpx;
  background: #fff;
  padding-left: 30rpx;
}
.input_email{
  display: inline-block;
  vertical-align: middle;
  padding-left: 30rpx;
  width:420rpx;
}

.email_item{
  display: flex;
  align-items: center;
  height: 100rpx;
}
.email_left{
  flex: 0 0 120rpx;
  width: 120rpx;
  font-size:30rpx;
  color:rgba(51,51,51,1);
}
.email_input{
  flex: 1;
  font-size:30rpx;
  padding-left: 40rpx;
  color:rgba(51,51,51,1);
}