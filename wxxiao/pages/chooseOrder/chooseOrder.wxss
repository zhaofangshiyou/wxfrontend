/* pages/chooseOrder/chooseOrder.wxss */

/* 订单选择 */
.order_list{
    margin-bottom: 80rpx;
}
.order_bg{
    margin-top: 20rpx;
    padding-left: 30rpx;
    background: #fff;
}
.order_mess_box{
    padding-top: 30rpx;
    padding-bottom: 30rpx;
}
.order_gun_num{
    height:30rpx;
    font-size:30rpx;
    color:rgba(51,51,51,1);
    line-height:30rpx;
}
.order_create_time,.order_oil_num{
    height:26rpx;
    font-size:26rpx;
    color:rgba(102,102,102,1);
    line-height:26rpx; 
    margin-top: 30rpx;
}
.right_padding{
    padding-left: 28rpx;
}
.order_pay_choose{
    height: 96rpx;
    line-height: 96rpx;
    border-top: 2rpx solid #EFEFEF;
    display: flex;
    justify-content: space-between;
    padding-right: 30rpx;
}
.order_pay_money{
    color:rgba(51,51,51,1);
    font-size: 26rpx;
}
.order_total_money{
    padding-left: 28rpx;
    color:rgba(249,100,50,1);
}

.choose_icon{
    width: 36rpx;
    height: 36rpx;
    vertical-align: middle;
}