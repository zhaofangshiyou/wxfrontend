/* pages/openCard/openCard.wxss */
.warn{
    height: 100rpx;
    box-sizing: border-box;
    padding:0 30rpx;
    line-height:100rpx;
}
.warn_icon{
    width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    display: inline-block;
    vertical-align: middle;
    border: 2rpx solid #F96432;
    border-radius: 50%;
    text-align: center;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    color:rgba(249,100,50,1);
    margin-right: 10rpx;
}
.warn_text{
    height:32rpx; 
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    color:rgba(153,153,153,1);
    line-height:32rpx; 
    color: #999999; 
}
.form_box{
    background: #fff;
    padding: 0 0 0 30rpx;
}
.section{
    width: 100%;
    overflow: hidden;
    height: 100rpx;
    display: flex;
    align-items: center;
    border-bottom: 2rpx solid #EFEFEF;
}
.section:last-child{
    border-bottom: 0;
}
.section_title{
    flex:0 0 112rpx;
    text-align: justify;
    text-justify: inter-ideograph;
    font-size: 30rpx;
    font-family:PingFangSC-Regular;
    color:rgba(51,51,51,1);
    line-height:100rpx;
    height:100rpx;
}
.section_title::after{
    content:"";
    display: inline-block;
    width:100%;
    overflow:hidden;
    height:0;
    }
.input{
    flex: 1;
    padding-left: 48rpx;
    font-family:PingFangSC-Regular;
    color:rgba(51,51,51,1);
    font-size: 30rpx;
}
.choose,.noChoose{
    flex: 1;
    padding-left: 48rpx;
    font-family:PingFangSC-Regular;
    font-size: 30rpx;
    height:100rpx;
    line-height:100rpx;
}
.choose_text{
    color:rgba(51,51,51,1);
}
.noChoose_text{
    color:#BDBDBD;
}
.choose_box{
    position: relative;
}
.right_icon{
    position: absolute;
    width: 20rpx;
    height: 24rpx;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%); 
}
.getCode{
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    border: 2rpx solid #F96432;
    text-align: center;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    color:rgba(249,100,50,1);
    margin-right: 30rpx;
}
.sureSubmit{
    padding-top: 80rpx;
    padding-bottom: 80rpx;
}

/* 性别选择弹窗 */
.sex_box {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    background:rgba(51,51,51,0.5);
}
.sex_content{
    width: 100%;
    background: #fff;
    padding: 0 0 0 30rpx;
    box-sizing: border-box;
}
.sex_item{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size:30rpx;
    font-family:PingFangSC-Regular;
    color:rgba(51,51,51,1);
    border-bottom: 2rpx solid #EFEFEF;
}
.sex_item:last-child{
    border-bottom: none;
}

.hideSex{
    display: none;
}
.showSex{ 
    display: block;
}