/* pages/zhaofangCardPay/zhaofangCardPay.wxss */
.warn{
    height: 72rpx;
    box-sizing: border-box;
    padding:0 30rpx;
    line-height:72rpx;
}
.warn_icon{
    width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    display: inline-block;
    vertical-align: middle;
    border: 1rpx solid #F96432;
    border-radius: 50%;
    text-align: center;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    color:rgba(249,100,50,1);
    margin-right: 10rpx;
}
.warn_text{
    height:32rpx; 
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    color:rgba(153,153,153,1);
    line-height:32rpx; 
    color: #999999; 
}
.consume{
    height: 190rpx;
    width: 100%;
    box-sizing: border-box;
    background: #fff;
    padding: 36rpx 30rpx;
    margin-bottom: 80rpx;
}
.title{
    font-size: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    color: #333333;
}
.number{
    height: 48rpx;
    line-height: 48rpx;
    display: flex;
    color: #333333;
    margin-top: 40rpx;
}
.sign{
    font-size: 48rpx;
    height: 48rpx;
    vertical-align: middle;
    display: inline-block;
}
.input_number{
    height: 48rpx;
    font-size: 48rpx;
    vertical-align: middle;
    margin-left: 20rpx;
    width: 100%;
}
.placeholder_size{
    font-size: 30rpx;
    height: 48rpx;
    vertical-align: bottom;
}
