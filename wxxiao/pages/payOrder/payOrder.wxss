/* pages/payOrder/payOrder.wxss */
.title{
    width: 100%;
    height: 100rpx;
    background: #fff;
    line-height: 100rpx;
    text-align: center;
    font-size: 0;
}
.pay_icon{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.text{
    font-size: 30rpx;
    color:rgba(51,51,51,1);
    vertical-align: middle;
    margin-left: 10rpx;
}
.content{
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 30rpx 80rpx 30rpx;
}
.box{
    width: 690rpx;
    height: 646rpx;
    position: relative;
}
.pay_bg{
    width: 100%;
    height: 646rpx;
}
.oil_name, .money{
    position: absolute;
    width: 100%;
    text-align: center;
    color:rgba(51,51,51,1);
}
.oil_name{    
    top: 85rpx;
    font-size: 30rpx;
}
.money{
    top: 125rpx;
    font-size: 60rpx;
}
.detail_box{
    position: absolute;
    width: 100%;
    top:  246rpx;
    padding: 40rpx;
    box-sizing: border-box;
}
.message{
    height: 26rpx;
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    line-height: 26rpx;
    margin-top: 36rpx;
}
.mess_name{
    color:rgba(102,102,102,1);
}
.detail_name{
    color:rgba(51,51,51,1);
}