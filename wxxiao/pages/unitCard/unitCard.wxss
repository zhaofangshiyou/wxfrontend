/* pages/unitCard/unitCard.wxss */
.content{
  width: 100%;
  background: #f5f5f5;
  height: 100VH;
  padding-bottom: 58rpx;
  padding-top: 10rpx;
}
.home_list{
  margin:0 30rpx;
  box-sizing: border-box;
}
.list_box{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0px 4px 10px 0px rgba(51,51,51,0.06);
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.list-left{
  display: flex;
  align-items: center;
}
.pay_icon{
  width: 68rpx;
  height: 68rpx;
  vertical-align: middle;
}
.right_icon{
  width: 20rpx;
  height: 30rpx;
}
.left_text{
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
}
.title{
  display: block;
  height:30rpx; 
  font-size:30rpx;
  font-family:PingFangSC-Semibold;
  color:rgba(249,100,50,1);
  line-height:30rpx;
}
.message{
  height:24rpx; 
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color:rgba(153,153,153,1);
  line-height:24rpx;
  margin-top: 20rpx;
}

.icon {
  width:80rpx;
  height:80rpx;
  background:linear-gradient(90deg,rgba(249,100,50,1) 0%,rgba(253,146,70,1) 100%);
  color: #fff;
  font-size: 36rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 80rpx;
}

.add_unit{
  width: 100%;
  height: 100rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 10rpx 0px rgba(51,51,51,0.06);
  border-radius:16rpx;
  margin-top: 20rpx;
  text-align: center;
  line-height: 100rpx;
  color:rgba(249,100,50,1);
  font-size: 30rpx;
}
