<!--pages/invoiceSearch/invoiceSearch.wxml-->
<header title="发票管理"></header>
<view class="container">
    <view class="tab">
        <view class="tab_item" data-tabIndex="1" bindtap="changeTab">
            <view class="tab_text {{tabIndex==1?'active':''}}">未开发票</view>
        </view>
        <view class="tab_item" data-tabIndex="2" bindtap="changeTab">
            <view class="tab_text {{tabIndex==2?'active':''}}">已开发票</view>
        </view>
    </view>
    <!-- 充值记录 -->
    <view class="recharge" hidden="{{tabIndex==2}}">
        <view class="recharge_list">
            <view class="text_message">
                <view class="text_title">华富加油站</view>
                <view class="text_tip">2018-04-16 12:12:12</view>
            </view>
            <view class="add_number">+3000</view>
        </view>
        <view class="recharge_list">
                <view class="text_message">
                    <view class="text_title">雨坛加油站</view>
                    <view class="text_tip">2018-04-16 12:12:12</view>
                </view>
                <view class="add_number">+3000</view>
            </view>
    </view>
    <!-- 消费记录 -->
    <view class="recharge" hidden="{{tabIndex==1}}">
        <view class="recharge_list">
            <view class="text_message">
                <view class="text_title">线上充值</view>
                <view class="text_tip">2018-04-16 12:12:12</view>
            </view>
            <view class="reduce_number">+3000</view>
        </view>
        <view class="recharge_list">
                <view class="text_message">
                    <view class="text_title">线上充值</view>
                    <view class="text_tip">2018-04-16 12:12:12</view>
                </view>
                <view class="reduce_number">+3000</view>
            </view>
    </view>

    <view class="noData" style="display:none">
        <image class="noData_image" src="../../images/icon_trade.png"></image>
        <view class="noDataText">暂无充值记录</view>
    </view>
</view>

