<!--pages/unitCardPayList/unitCardPayList.wxml-->
<view class="container">
  <view class="content-wrapper">
    <view class="list">
      <view class="item" wx:for="{{list}}" data-id="{{item.id}}" data-company="{{item.company}}" bindtap="backPay">
        <view class="title">{{item.company}}</view>
        <view class="setDefault" catchtap="setDefault" data-id="{{item.id}}">
          <!-- <image class="choose_icon" src="{{img_url}}/icon_choice.png"></image> -->
          <image class="choose_icon" src="{{img_url}}/icon_normal.png"></image>
          <text class="default_text">设为默认</text>
        </view>
      </view>
    </view>
  </view>
</view>
