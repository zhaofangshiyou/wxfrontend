/* pages/invoiced/invoiced.wxss */
.invoiced{
  top: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  position: fixed;
  background: #f5f5f5;
  overflow: auto;
}
.invoice_type{
  background: #fff;
  padding-left: 30rpx;
}
.title{
  height: 102rpx;
  line-height: 102rpx;
  color: #F96432;
  border-bottom: 2rpx solid #efefef;
  font-size: 30rpx;
}
.message{
  padding: 36rpx 0;
  font-size:26rpx;
  height: 26rpx;
  line-height: 26rpx;
  color:rgba(51,51,51,1);
}
.margin_top{
  margin-top: 20rpx;
}
.padding_bottom {
  padding-bottom: 36rpx;
}
.item{
  font-size: 0;
  padding-top: 24rpx;
  display: flex;
  align-items: top;
}
.item:last-child{
  padding-bottom: 24rpx;
}
.note{
  flex: 0 0 130rpx;
  width: 130rpx;
  font-size:26rpx;
  color:rgba(102,102,102,1);
  height:26rpx;
  text-align:justify;
  text-justify:inter-ideograph; 
}
.note::after{
  content: " ";
  display: inline-block;
  width: 100%;
}
.text{
  flex: 1;
  font-size:26rpx;
  line-height: 38rpx;
  color:rgba(34,34,34,1);
}