/* pages/points/points.wxss */
.page_content{
    background: #f5f5f5;
    width: 100%;
    height: 100vh;
    position: relative;
}
.header_box{
    position: fixed;
    z-index: 10000;
    width: 100%;
    box-sizing: border-box;
    height: 312rpx;
    padding: 68rpx 30rpx 0 30rpx;
    background:linear-gradient(135deg,rgba(249,100,50,1),rgba(253,146,70,1));
}
.header{
   padding-top: 10rpx;
}
.header_title{
    height: 34rpx;
    line-height: 34rpx;
    font-size:34rpx;
    color:rgba(255,255,255,1);
    text-align: center;
    width: 100%;
}
.goBack{
    position: absolute;
    top: 50rpx;
    left: 10rpx;
    padding: 20rpx;
}
.left_icon{
    width: 15rpx;
    height: 30rpx;
}

.header_msg{
  display: flex;
  justify-content: space-between;  
  align-items: center;
  margin-top: 56rpx;
}

.avatar{
    width: 100rpx;
    height: 100rpx;
    display: inline-block;
    vertical-align: middle;
}
.header_notice{
    vertical-align: middle;
    display: inline-block;
    margin-left: 20rpx;
}
.curr_points{
    height:24rpx;
    font-size:24rpx;
    color:rgba(255,255,255,1);
    line-height:24rpx;  
}
.point_number{
    height:36rpx;
    font-size:36rpx;
    color:rgba(255,255,255,1);
    line-height:36rpx; 
    margin-top: 18rpx; 
}
.point_text{
    font-size: 20rpx;
    margin-left: 8rpx;
}
.header_msg_right{
    width:120rpx;
    height:42rpx;
    border-radius:30rpx;
    border:1px solid rgba(255,255,255,1);
    font-size: 24rpx;
    color: #fff;
    text-align: center;
    line-height: 42rpx;
}

.point_box{
    height:100%;
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    -webkit-box-orient:vertical;
    -webkit-flex-direction:column;
    flex-direction:column;
    overflow:hidden;
    background: #f5f5f5;
    padding-top: 332rpx;
}
.point_list{
    background: #fff;
    padding-left: 30rpx;
}
.point_item{
    height: 140rpx;
    border-bottom: 2rpx solid #EFEFEF;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.point_item:last-child{
    border-bottom: 0;
}
.pay_type{
    height:30rpx;
    font-size:30rpx;
    color:rgba(51,51,51,1);
    line-height:30rpx;
}
.pay_time{
    height:24rpx;
    font-size:24rpx;
    color:rgba(153,153,153,1);
    line-height:24rpx;
    margin-top: 18rpx;
}
.pay_point{
    padding-right: 30rpx;
    font-size:30rpx;
    color:rgba(249,100,50,1);
}

.noData{
    padding-top: 150rpx;
    text-align: center;
}
.noData_image{
    width:180rpx;
    height: 180rpx;
    margin: 0 auto;
}
.noDataText{
    font-size:30rpx;
    color:rgba(153,153,153,1);
    margin-top: 30rpx;
}

.noMore{
    width: 100%;
    overflow: hidden;
    height: 100rpx;
    background: #f5f5f5;
    text-align: center;
    line-height: 100rpx;
    font-size: 24rpx;
    color: #bdbdbd;
}