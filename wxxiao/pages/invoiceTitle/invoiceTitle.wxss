/* pages/invoiceTitle/invoiceTitle.wxss */
.box_padding{
    padding-top: 20rpx;
}
.wxImport_box{
  height: 100rpx;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.wx_title{
  font-size:30rpx;
  color:rgba(51,51,51,1);
}
.go_icon{
  width: 20rpx;
  height: 30rpx;
}
.tab{
    width: 100%;
    overflow: hidden;
    box-sizing: border-box;
    padding-left: 30rpx;
    background: #fff;
}
.tab_box{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #efefef;
}
.tabType {
    display: inline-block;
    font-size:30rpx;
    color:rgba(51,51,51,1);
    vertical-align: middle;
}
.tab_item{
    display: inline-block;
    font-size: 0;
    vertical-align: middle;
    margin-left: 30rpx;
}
.choose_icon{
   width: 36rpx;
   height: 36rpx; 
   display: inline-block;
   vertical-align: middle;
}
.tab_text{
    height: 36rpx;
    line-height: 36rpx;
    display: inline-block;
    font-size:30rpx;
    color:rgba(51,51,51,1);
    margin-left: 12rpx;
    vertical-align: middle;
}
.company{
    padding-left: 14rpx;
}
.setion_box{
  padding-left:30rpx;
  background: #fff;
}
.section{
    height: 100rpx;
    box-sizing: border-box;
    display: flex;
    font-size: 0;
    align-items:  center;
    border-bottom: 2rpx solid #efefef;
}
.section:last-child{
  border-bottom: 0;
}
.section_title{
    flex:0 0 120rpx;
    height:30rpx; 
    font-size:30rpx;
    color:rgba(51,51,51,1);
    line-height:30rpx;
}
.person_text{
    flex: 1;
    height:30rpx; 
    font-size:30rpx;
    color:rgba(51,51,51,1);
    line-height:30rpx;
    padding-left: 40rpx;
}
.btn_area{
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx;
    margin-top: 80rpx;
    border: 0;
}
button::after{
    border: none;
}
button[disabled] {
    background:rgba(224,224,224,1) !important;
    box-shadow: none !important;
}

.company_box{
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
}
.invoice_type{
    width: 100%;
    height: 200rpx;
    background: #fff;
    padding: 36rpx 30rpx 32rpx 30rpx;
    font-size: 0;
    box-sizing: border-box;
}
.invoice_text{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  color:rgba(51,51,51,1);
}
.invoice_tab{
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}
.invoice_item{
    width: 208rpx;
    height: 72rpx;
    border: 1rpx solid #efefef;
    border-radius: 8rpx;
    text-align: center;
    line-height: 72rpx;
    font-size: 28rpx;
    color:rgba(102,102,102,1);
}
.invoice_item.active{
    color: #F96432;
    background:rgba(254,221,213,1);
    border: 1rpx solid #F96432;
}

.add_tax{
    width: 100%;
    box-sizing: border-box;
}
.section_box{
    padding-left: 30rpx;
    background: #fff;
}
.section2{
    width: 100%;
    height: 100rpx;
    background: #fff;
    box-sizing: border-box;
    padding: 35rpx 30rpx 35rpx 0;
    display: flex;
    font-size: 0;
    align-items:  center; 
    border-bottom: 1rpx solid #EfEfEf;
}
.section2:last-child{
    border-bottom: 0;
}
.section2_title{
    flex:0 0 120rpx;
    height:30rpx; 
    font-size:30rpx;
    color:rgba(51,51,51,1);
    line-height:30rpx;
    text-align: justify;
}
.section2_title:after {
    display: inline-block;
    width: 100%;
    content: '';
}