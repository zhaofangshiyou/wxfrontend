/* pages/catType/carType.wxss */
.title {
    position: relative;
    padding: 10px 0;
  }
  .title_list {
    display: inline-block;
    padding: 0 15px;
    height: 20px;
    line-height: 20px;
    font-size: 16px;
  }
  .title button {
    width: 50px;
    height: 30px;
    font-size: 16px;
    padding: 0;
    line-height: 30px;
    margin: auto;
    position: absolute;
    top: 0;
    bottom:0;
    right: 10px;
    background: none;
  }
  .title button::after {
    border: none;
  }
  .title_list:nth-child(1) {
    border-right:1px #ccc solid;
  }
  /*城市列表*/
  .city_list {
    position: relative;
  }
  /*城市选择头部*/
  .list_tit {
    display: block;
    line-height: 58rpx;
    height: 58rpx;
    padding-left: 30rpx;
    background: #f5f5f5;
    font-size:26rpx;
    font-family:PingFangSC-Regular;
    color:rgba(102,102,102,1);
  }
  .list_con {
    height: 100rpx;
    /*border-top: 1px #f5f5f5 solid ;*/
    line-height: 100rpx;
    font-size:30rpx;
    font-family:PingFangSC-Regular;
    color:rgba(51,51,51,1);
    padding-left: 30rpx;
  }
  .list_con::before {
    content: " ";
    height: 1px;
    border-top: 1px #f5f5f5 solid;
    position: absolute;
    width: 100%;
  }
  .list_con::before:nth-child(1) {
    border: none;
  }
  /*城市选择 右边*/
  .scroll_list {
    background: rgba(0,0,0,0);
    position: absolute;
    height: calc(100% - 166rpx);
    width: 25rpx;
    top: 186rpx;
    right: 33rpx;
  }
  .scroll_list_chi {
    /*border: 1px blue solid;*/
    text-align: center;
    font-size:26rpx;
    font-family:PingFangSC-Regular;
    color:rgba(153,153,153,1);
  }
  /*显示框*/
  .showwords {
    width: 80px;
    height: 80px;
    background: rgba(0,0,0,.3);
    border-radius:50%;
    line-height: 80px;
    text-align: center;
    font-size:10vw;
    margin: auto;
    position: absolute;
    top: 0;left: 0;bottom: 0;right: 0;
    z-index: 999; 
  }

/* 二级车型 */
.sub_box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 128rpx;
  left: 0;
  bottom: 0;
  background:rgba(51,51,51,0.5);
}
.sub_conten{
  width: 100%;
