<!--pages/myCard/myCard.wxml-->
<header title="我的兆方卡"></header>
<view class="container">
    <view class="content">
        <view class="home_list" wx:for="{{listArr}}" wx:for-index="index" wx:for-item="item" data-index="{{index}}" bindtap="cardDetail">
            <view class="list_box">
                <view class="list-left">
                    <image class="pay_icon" src="{{item.iconUrl}}"></image>
                    <view class="left_text">
                    <text class="title">{{item.name}}</text>
                    <text class="message">{{item.notice}}</text>
                    </view>
                </view>
                <view class="list-right">
                    <image class="right_icon" wx:if="{{img_url}}" src="{{img_url}}/home_icon_enter.png"></image> 
                </view>
            </view>
        </view>  
    </view>
</view>
