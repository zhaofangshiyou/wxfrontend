<!--pages/succeCard/succeCrd.wxml-->
<wxs module="dateFr" src="../../filter/dateFilter.wxs"></wxs>
<header title="{{title}}"></header>
<view class="container">
    <view class="header" wx:if="{{type==0 || type==6}}">
        <image class="success_icon" src="../../images/icon_succeed.png"></image>
        <view class="title">{{title}}</view>
    </view>
    <view class="card_box">
        <image class="card_icon" src="../../images/zfcard.png" mode="aspectFit"></image>
        <view class="card_num">{{card_num}}</view>
    </view>
    <view class="account_box">
        <view class="account_cont">
            <view class="text">卡内余额</view>
            <view class="balance">
                <view class="money">¥{{dateFr.toFix(balance)}}</view>
                <view class="recharge" wx:if="{{type != 2}}" bindtap="recharge">充值</view>
            </view>
        </view>
    </view>
    <sureBtn text="完成" bind:sureEvent="finishSubmi" wx:if="{{type==6}}"></sureBtn>
</view>
