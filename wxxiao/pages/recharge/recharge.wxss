.discount_icon{
    width: 51rpx;
    height: 51rpx;
}
.choose_item.active{
    color: #F96432;
    border: 1rpx solid #F96432;
    background:rgba(254,221,213,1);
}
.choose_invoice{
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    background: #fff;
    line-height: 100rpx;
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
    padding: 0 30rpx;
}
.invoice_title{
    font-size: 30rpx;
    color:rgba(51,51,51,1);
}
.right_icon{
    width: 20rpx;
    height: 30rpx;
    margin-left: 10rpx;
    vertical-align: middle;
}
.notice{
    font-size:30rpx;
    color:rgba(189,189,189,1);
}
.agree_box{
    width: 100%;
    overflow: hidden;
    padding-left: 30rpx;
    height: 30rpx;
    margin-top: 30rpx;
    font-size: 0;
}
.agree_icon{
    width: 30rpx;
    height: 30rpx;
    vertical-align: top;
}
.agree_text, .agree_name{
    font-size: 24rpx;
    vertical-align: top;
    height: 30rpx;
    line-height: 30rpx;
}
.agree_text{
    margin-left: 10rpx;
   color:rgba(153,153,153,1);
}
.agree_name{
    color:#333333;  
}
.sure_btn{
    margin-top: 83rpx;
}

.show_notice{
    visibility:visible;
}
.hide_notice{
    visibility:hidden;   
}