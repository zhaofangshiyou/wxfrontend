/* pages/recharge/recharge.wxss */
.content{
    width: 100%;
    box-sizing: border-box;
    padding-top: 20rpx;
    overflow: hidden;
}
.rechage_box{
    background: #fff;
    /* padding: 36rpx 30rpx 60rpx 30rpx; */
    font-size: 0;
    padding-top: 36rpx;
    
}
.title{
    height:30rpx; 
    font-size:30rpx;
    color:rgba(51,51,51,1);
    line-height:30rpx;
    padding-left: 30rpx;
}
.rechage_number{
    padding-left: 30rpx;   
}
.rechage_notice{
    display: flex;
    align-items: center;
    padding-bottom:  30rpx;
    padding-top: 40rpx;
    border-bottom: 1rpx solid #efefef;
}
.rechage_text{
    flex: 0 0 48rpx;
    height:48rpx; 
    font-size:48rpx;
    color:rgba(51,51,51,1);
    line-height:48rpx;
    font-family:PingFangSC-Medium;
}
.input{
    flex: 1;
    height:48rpx; 
    font-size:48rpx;
    color:rgba(51,51,51,1);
    line-height:48rpx;
}
.placeholder_size{
    font-size: 30rpx;
}

.choose_money{
    padding: 26rpx  30rpx 60rpx 30rpx;
}

.accounce_icon{
   width: 36rpx;
   height: 36rpx;
   vertical-align: middle;
}
.accounce_text{
    font-size:24rpx;
    color:rgba(249,100,50,1);
    vertical-align: middle;
    margin-left: 10rpx;
}
.money_list{
    margin-top: 26rpx;
    display: flex;
    justify-content:space-between;
}
.choose_item{
    width:155rpx;
    height:72rpx; 
    border-radius: 8rpx ;
    border: 1rpx solid #efefef;
    font-size:30rpx;
    margin: 0 auto;
    text-align: center;
    line-height: 72rpx;
    color:rgba(102,102,102,1);
    position: relative;
    overflow: hidden;
}
.discount {
    position: absolute;
    top: 0;
    left: 0;
    width: 51rpx;
    height: 51rpx;
