/* pages/regMasterCard/regMasterCard.wxss */
.company_wrapper{
  margin-top: 20rpx;
  background: #fff;
  box-sizing: border-box;
  padding-left: 30rpx;
}
.section{
  height: 100rpx;
  border-bottom: 2rpx solid #efefef;
  display: flex;
  align-items: center;
}
.name{
  flex:0 0 120rpx;
  text-align: justify;
  text-justify: inter-ideograph;
  font-size: 30rpx;
  font-family:PingFangSC-Regular;
  color:rgba(51,51,51,1);
  line-height:100rpx;
  height:100rpx;
}
.name::after{
  content:"";
  display: inline-block;
  width:100%;
  overflow:hidden;
  height:0;
}
.contnet{
  flex: 1;
  position: relative;
  padding-left: 30rpx;
}
.text{
  font-size:30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:30rpx;
}
.right_icon{
  position: absolute;
  width: 20rpx;
  height: 24rpx;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%); 
}

.no-border{
  border: none;
}
.code{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%); 
  padding: 0 14rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #F96432;
  color: #F96432;
  z-index: 100;
}
.code.active{
  color: #999999;
  border: 2rpx solid #BDBDBD;
}

.agree_box{
  overflow: hidden;
  padding-left: 30rpx;
  height: 30rpx;
  margin-top: 30rpx;
  font-size: 0;
}
.agree_icon{
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
}
.agree_text, .agree_name{
  font-size: 24rpx;
  vertical-align: top;
  height: 30rpx;
  line-height: 30rpx;
}
.agree_text{
  margin-left: 10rpx;
 color:rgba(153,153,153,1);
}
.agree_name{
  color:#333333;  
}
.toggleAgreement{
  display: inline-block;
}

.sureSubmit{
  padding-top: 80rpx;
  padding-bottom: 80rpx;
}