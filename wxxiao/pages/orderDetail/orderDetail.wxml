<!--pages/orderDetail/orderDetail.wxml-->
<view class="container">
    <view class="content">
        <view class="detail_box">
            <view class="detail_title">
                <image class="address_icon" src="../../images/icon_address.png"></image>
                <text class="detail_text">华富加油站</text>
            </view>
            <view class="detail_mess">
                <view class="meaasge_item">
                    <view class="name">油枪号码</view>
                    <view class="amount">1号油枪</view>
                </view>
                <view class="meaasge_item">
                    <view class="name">油品类型</view>
                    <view class="amount">92号车用汽油(V)</view>
                </view>
                <view class="meaasge_item">
                    <view class="name">加油升数</view>
                    <view class="amount">28.9L</view>
                </view>
                <view class="meaasge_item">
                    <view class="name">订单金额</view>
                    <view class="amount">300元</view>
                </view>
                <view class="meaasge_item">
                    <view class="name">优惠金额
                        <image class="help_icon" src="../../images/gathering_icon_help.png"></image>
                    </view>
                    <view class="amount">10元</view>
                </view>
            </view>
            <view class="payment">
                <view class="payment_title">实际支付金额</view>
                <view class="payment_num">¥280</view>
            </view>
        </view>
    </view>
    <view class="pay_way">支付方式</view>
    <view class="pay_way_box">
        <view class="pay_item">
            <view class="pay_left">
                <image class="pay_icon" src="../../images/carpay.png"></image>
                <text class="pay_text">兆方车上付</text>
            </view>
            <view class="pay_choose">
                <image class="choose_icon" src="../../images/icon_choice.png"></image>
            </view>
        </view>
        <view class="pay_item">
            <view class="pay_left">
                <image class="wexin_icon" src="../../images/weixin.png"></image>
                <text class="pay_text">兆方车上付</text>
            </view>
            <view class="pay_choose">
                <image class="choose_icon" src="../../images/icon_normal.png"></image>
            </view>
        </view>
    </view>
    <sureBtn text="确认支付" bind:sureEvent="submitFinish"></sureBtn>
</view>

<!-- 输入支付密码键盘 -->
<view class="keyboard_box">
    <view class="board_content">
        <view class="board_header">
            <image class="hide_icon" src="../../images/hide.png"></image>
            <text class="board_title">请输入兆方卡支付密码</text>
        </view>
        <view class="board_pass">
            <view class="pass_box">
                <view class="pass_box_item">
                    <view class="pass_point"></view>
                </view>
                <view class="pass_box_item">
                    <view class="pass_point"></view>
                </view>
                <view class="pass_box_item">
                    <view class="pass_point"></view>
                </view>
                <view class="pass_box_item">
                    <view class="pass_point"></view>
                </view>
                <view class="pass_box_item">
                    <view class="pass_point"></view>
                </view>
                <view class="pass_box_item">
                    <view class="pass_point"></view>
                </view>
            </view>
            <view class="forget_pass">忘记密码?</view>
        </view>
        <view class="board_number">
            <view class="board_number_box">
                <view class="board_number_item">1</view>
                <view class="board_number_item">2</view>
                <view class="board_number_item">3</view>
            </view>
            <view class="board_number_box">
                <view class="board_number_item">4</view>
                <view class="board_number_item">5</view>
                <view class="board_number_item">6</view>
            </view>
            <view class="board_number_box">
                <view class="board_number_item">7</view>
                <view class="board_number_item">8</view>
                <view class="board_number_item">9</view>
            </view>
            <view class="board_number_box">
                <view class="board_number_item">确定</view>
                <view class="board_number_item">0</view>
                <view class="board_number_item">
                    <image class="delete_icon" src="../../images/delete.png"></image>
                </view>
            </view>
        </view>
    </view>  
</view>

